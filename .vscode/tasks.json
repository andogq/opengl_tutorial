{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                // "-Wall",
                // "-Werror",
                "$(find",
                "${workspaceFolder}/src",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",

                "${workspaceFolder}/src/dependencies/glad/src/gl.c",

                "-g",

                "$(sdl2-config",
                "--cflags",
                "--libs)",

                "-I${workspaceFolder}/src/dependencies/glad/include",

                "-o",
                "${workspaceFolder}/out/app"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}